// A simple program to determine whether a year is a leap year or not

#include <stdio.h>

int main(void) {

    int year;
    int four = 4;
    int hundred = 100;
    int fourhundred = 400;

    printf("Enter year: ");
    scanf("%d", &year);
    
// % modulus allows you to see remainders in a division
    if (year % four != 0) {
        printf("%d is not a leap year.\n", year);
    } else if (year % hundred != 0) {
        printf("%d is a leap year.\n", year);
    } else if (year % fourhundred == 0) {
        printf ("%d is a leap year.\n", year);
    } else {
        printf ("%d is not a leap year.\n", year);
    }

    return 0;
}


